#ifndef APPLICATION_H_
#define APPLICATION_H_

#include "main.h"

// State transtion variables
typedef enum
{
	stateInit = 0,
	stateLed1,
	stateLed2,
	stateLed3,
	stateLed4
}state_t;

// State Status variables
typedef enum
{
	SUCCESS = 0,
	FAIL
}status_t;


typedef status_t (*functionPtr)(void);

typedef struct
{
	functionPtr	function;
	bool stateTransitionCondition;
}stateFunction_t;



#endif /* APPLICATION_H_ */
